@model Car 
@using System.Globalization;

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    <p>@Model.ShortDesc <u>
    @if(@Model.CategoryId == 1) {<a style="color: black;" href="/Cars/List/electric">Electric Car</a> } else if(@Model.CategoryId == 2) { <a style="color: black;" href="/Cars/List/gasoline">Gasoline Car</a>}
    </u></p>
    <p>@Model.LongDesc</p>
    <p><b>Price:</b> @Model.Price.ToString("C", CultureInfo.CreateSpecificCulture("eu-ES"))</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-Id="@Model.Id">Add to Cart</a></p>
</div> 